n = int(input())
a = list(map(int,input().split()))

def minimum_sum(n,a):
    minimum = sum(a)
    for i in range(n):
        for j in range(i+1,n):
            avg = (a[i] + a[j])/2
            if a[i] < avg:
                a[i] = 0
            elif a[j] < avg:
                a[j] = 0
        current = sum(a)
        minimum = min(current,minimum)
    return minimum
    
print(minimum_sum(n,a))
